<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식당이름"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_stroke"
        android:drawableLeft="@drawable/drawable_image_size"
        android:drawablePadding="4dp"
        android:padding="10dp"
        android:text="전화"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="위치"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/call"
        app:layout_constraintBottom_toBottomOf="@id/locationCheck"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/locationCheck"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_stroke"
        android:padding="10dp"
        android:text="위치 확인"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/call" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationCheck"
        app:layout_constraintVertical_bias="0.0">

        <TableRow>

            <Button
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="메뉴"
                android:background="@drawable/down_lines" />

            <Button
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="정보"
                android:background="@drawable/downrightleftlines" />

            <Button
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="리뷰"
                android:background="@drawable/down_lines" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <ListView
            android:id="@+id/menuList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/information"
            android:text="정보" />

        <LinearLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/reviewWR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_stroke"
                android:gravity="center"
                android:text="리뷰 작성" />

            <ListView
                android:id="@+id/reviewList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>


        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>